<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activties.UserProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_margin="5dp"
            android:text="Update Profile"/>


        <ImageView
            android:id="@+id/btn_updateprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/updateprofie" />
    </LinearLayout>

    <TextView
        android:id="@+id/ufirstname_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:text="FirstName*"/>
    <TextView
        android:id="@+id/lastname_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"

        android:text="LastName*"/>
    <TextView
        android:id="@+id/emaail_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:text="Email Addrress*"/>

    <TextView
        android:id="@+id/phone_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:text="Phone Number*"/>

    <TextView
        android:id="@+id/aadhar_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:text="Aadhar Number*"/>
    <TextView
        android:id="@+id/address_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:text="Address *"/>

    <TextView
        android:id="@+id/city_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"


        android:text="City *"/>

    <TextView
        android:id="@+id/postalcode_userprofile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"


        android:text="Postal Code *"/>
    <!--<Spinner-->
        <!--android:id="@+id/user_select_city"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="15dp"/>-->











</LinearLayout>