<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:text="id"
        android:id="@+id/agents_id_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="lastname"
        android:id="@+id/agents_id_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="business name"
        android:id="@+id/agents_id_business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="status id"
        android:id="@+id/agents_id_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="govt id"
        android:id="@+id/agents_id_govt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Crated on"
        android:id="@+id/agents_id_cretaed_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:text="Address"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <TextView
            android:text="id"
            android:id="@+id/agents_id_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>
    </LinearLayout>
    <TextView
        android:text="phone"
        android:id="@+id/agents_id_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Email"
        android:id="@+id/agents_id_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>