<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="2">
        <TextView
            android:text="id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="2">
        <TextView
            android:text="Policy name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/policy_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:fontFamily="serif" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="2">
        <TextView
            android:text="Policy number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
        android:id="@+id/company_policy_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#d2121111"
        android:textSize="15sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp">
        <TextView
            android:text="Company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="normal"
            app:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/policy_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_margin="2dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="2">
        <TextView
            android:text="Contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/policy_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            app:fontFamily="serif"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_weight="2">
        <TextView
            android:text="start date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:fontFamily="serif"/>
        <TextView
            android:id="@+id/policy_start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:fontFamily="serif"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_weight="2">
        <TextView
            android:text="end date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:fontFamily="serif"/>
        <TextView
            android:id="@+id/policy_end_dates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#d2121111"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="1"
            app:fontFamily="serif"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
